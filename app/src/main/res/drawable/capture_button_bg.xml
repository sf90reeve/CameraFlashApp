<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Outer circle -->
    <solid android:color="#FFFFFF"/> <!-- White fill -->

    <!-- Border like a shutter button -->
    <stroke
        android:width="4dp"
        android:color="#CCCCCC"/> <!-- Light gray border -->

    <!-- Optional inner padding for a softer look -->
    <size
        android:width="80dp"
        android:height="80dp"/>
</shape>
